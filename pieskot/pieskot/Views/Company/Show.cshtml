@model NaSpacerDo.ViewModels.CompanyViewModel
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/flexslider")
<h2>Show</h2>
<div>
    @Html.Hidden("company_id", Model.Id, new { id = "company_id" })
    @Html.Hidden("average_company_rate", Model.AverageRate, new { id = "average_company_rate" })
    <h4>Company</h4>
    <hr />
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.Name }, new { id = "edit_company" })
    <br />
    @if (Model.Logo?.Path != null)
    {
        <img src="@Model.Logo.Path" style="height: 300px; width:300px;" id="company_logo" />
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
