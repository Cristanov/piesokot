            @Html.LabelFor(model => model.Www)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Www)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Address.City.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address.City.Name)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Address.Street)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address.Street)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Address.Number)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address.Number)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Address.ZipCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address.ZipCode)
        </dd>
        <dt>
            @Html.LabelFor(model => model.ShortDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt>
            @Html.LabelFor(model => model.LongDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
    </dl>
</div>
